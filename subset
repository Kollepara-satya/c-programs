#include <stdio.h>
void main()
{
    char s[50];
    int n,i,j,x,k;
    printf("enter string:");
    gets(s);
    n=strlen(s);
    for(i=1;i<=n;i++)
    {
        for(j=0;j<=n-i;j++)
        {
            x=i+j;
            for(k=j;k<x;k++)
            printf("%3c",s[k]);
            printf("\n");
        }
    }
}
